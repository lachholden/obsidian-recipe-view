{
  // "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": [
      "svelte",
      "node"
    ],
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2022"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.svelte",
  ]
}